# Production Environment Variables
# Copy this file to .env.prod and fill in your values

# Application
APP_SECRET=changeme_generate_a_secure_random_string

# Server configuration
SERVER_NAME=yourdomain.com
# For automatic HTTPS with Let's Encrypt:
# SERVER_NAME=yourdomain.com

# Database
# SQLite (default, simple deployment)
DATABASE_URL=sqlite:///%kernel.project_dir%/var/data.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@database:5432/ia_challenge?serverVersion=16&charset=utf8

# MySQL
# DATABASE_URL=mysql://user:password@database:3306/ia_challenge?serverVersion=8.0.32&charset=utf8mb4

# Database password (if using PostgreSQL)
# DB_PASSWORD=your_secure_password

# OpenAI API Key for image generation
OPENAI_API_KEY=sk-your-openai-api-key-here

# Frontend API URL
VITE_API_URL=https://yourdomain.com/api
# or if using different domains:
# VITE_API_URL=https://api.yourdomain.com/api

# FrankenPHP Configuration
FRANKENPHP_NUM_THREADS=auto
