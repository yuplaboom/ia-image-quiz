{
    # Enable FrankenPHP
    frankenphp {
        # Enable worker mode for better performance (optional)
        # worker ./public/index.php
    }

    # HTTP/3 support
    servers {
        protocols h1 h2 h3
    }

    # Order directive to ensure Mercure is handled before other routes
    order mercure before php_server
}

:80 {
    # Set the root directory
    root * /app/public

    # Enable compression
    encode zstd gzip

    # CORS headers (applied to all responses)
    header {
        # CORS
        Access-Control-Allow-Origin "*"
        Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization, Accept, X-Requested-With"
        Access-Control-Max-Age "3600"
        Access-Control-Expose-Headers "Link"

        # Security headers
        Strict-Transport-Security "max-age=31536000;"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        -Server
    }

    # Handle OPTIONS requests (CORS preflight)
    @options {
        method OPTIONS
    }
    handle @options {
        respond 204
    }

    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Mercure hub configuration
    mercure {
        # Transport URL (optional, defaults to bolt)
        # Anonymous subscriptions (allows subscriptions without JWT)
        anonymous
    }

    # Use php_server directive for Symfony/API Platform
    php_server

    # Logging
    log {
        output stdout
        format console
        level INFO
    }
}
