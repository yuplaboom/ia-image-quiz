{
    # Enable FrankenPHP
    frankenphp {
        # Enable worker mode for better performance (optional)
        # worker ./public/index.php
    }

    # HTTP/3 support
    servers {
        protocols h1 h2 h3
    }
}

:80 {
    # Set the root directory
    root * /app/public

    # Enable compression
    encode zstd gzip

    # Health check endpoint (handled first, before PHP)
    handle /health {
        respond "OK" 200
    }

    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000;"
        # Prevent MIME sniffing
        X-Content-Type-Options "nosniff"
        # Enable XSS protection
        X-Frame-Options "SAMEORIGIN"
        # Remove server header
        -Server
    }

    # CORS for API
    @cors_preflight {
        method OPTIONS
    }
    handle @cors_preflight {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
            Access-Control-Allow-Headers "*"
            Access-Control-Max-Age "3600"
        }
        respond 204
    }

    # CORS headers for all API requests
    @api {
        path /api/*
    }
    handle @api {
        header {
            Access-Control-Allow-Origin "*"
            Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
            Access-Control-Allow-Headers "*"
        }
    }

    # Use php_server directive for Symfony/API Platform
    php_server

    # Logging
    log {
        output stdout
        format console
        level INFO
    }
}
